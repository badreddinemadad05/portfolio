PORT=3001

# Allowed frontend origin (or * for local dev).
# You can set multiple origins separated by commas.
# Example:
# ALLOWED_ORIGIN=https://ton-site.netlify.app,https://www.ton-domaine.com
ALLOWED_ORIGIN=*

# If true, API returns error when SMTP send fails.
# If false, API still returns success as long as message is stored locally.
SMTP_REQUIRED=false

# SMTP settings (optional if you only want local storage)
SMTP_SERVICE=gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_16_char_app_password

